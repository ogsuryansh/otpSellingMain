<%- include('partials/head') %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <%- include('partials/navbar') %>

  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-2">Manage Services & Servers</h1>
      <p class="text-gray-600">Add, edit, and manage your services and servers</p>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-green-500">
        <h3 class="text-lg font-semibold text-gray-800 mb-3">Quick Actions</h3>
        <div class="space-y-3">
          <a href="/add-service" class="block w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 text-center">
            <i class="fas fa-plus mr-2"></i>Add New Service
          </a>
          <a href="/add-server" class="block w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-200 text-center">
            <i class="fas fa-server mr-2"></i>Add New Server
          </a>
        </div>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 border-l-4 border-purple-500">
        <h3 class="text-lg font-semibold text-gray-800 mb-3">Statistics</h3>
        <div class="space-y-2">
          <div class="flex justify-between">
            <span class="text-gray-600">Total Services:</span>
            <span class="font-semibold text-purple-600"><%= services.length %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Total Servers:</span>
            <span class="font-semibold text-purple-600"><%= servers.length %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Services Section -->
    <div class="bg-white rounded-xl shadow-lg mb-8">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-800">Services</h2>
        <p class="text-gray-600 text-sm">Manage your available services</p>
      </div>
      
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service Name</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (services && services.length > 0) { %>
              <% services.forEach(function(service) { %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                          <i class="fas fa-cog text-blue-600"></i>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900"><%= service.name %></div>
                        <div class="text-sm text-gray-500">ID: <%= service._id %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= new Date(service.createdAt).toLocaleDateString() %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <button onclick="editService('<%= service._id %>', '<%= service.name %>')" class="text-indigo-600 hover:text-indigo-900 mr-3">
                      <i class="fas fa-edit"></i> Edit
                    </button>
                    <button onclick="deleteService('<%= service._id %>', '<%= service.name %>')" class="text-red-600 hover:text-red-900">
                      <i class="fas fa-trash"></i> Delete
                    </button>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="3" class="px-6 py-4 text-center text-gray-500">
                  No services found. <a href="/add-service" class="text-blue-600 hover:text-blue-800">Add your first service</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Servers Section -->
    <div class="bg-white rounded-xl shadow-lg">
      <div class="p-6 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-800">Servers</h2>
        <p class="text-gray-600 text-sm">Manage your server configurations</p>
      </div>
      
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Server Info</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Services</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">API Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (servers && servers.length > 0) { %>
              <% servers.forEach(function(server) { %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                          <i class="fas fa-server text-green-600"></i>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900"><%= server.name %></div>
                        <div class="text-sm text-gray-500">
                          <%= server.country_code %> â€¢ Rating: <%= server.rating %>/5 ðŸ’Ž
                        </div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">
                      <% if (server.enabled_services && server.enabled_services.length > 0) { %>
                        <div class="flex flex-wrap gap-1">
                          <% server.enabled_services.forEach(function(serviceId) { %>
                            <% const service = services.find(s => s._id.toString() === serviceId.toString()) %>
                            <% if (service) { %>
                              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                <%= service.name %>
                              </span>
                            <% } %>
                          <% }); %>
                        </div>
                      <% } else { %>
                        <span class="text-gray-400">No services</span>
                      <% } %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm">
                      <% if (server.api && server.api.api_base_url) { %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          <i class="fas fa-check-circle mr-1"></i> Configured
                        </span>
                      <% } else { %>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
                          <i class="fas fa-exclamation-circle mr-1"></i> No API
                        </span>
                      <% } %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <button onclick="editServer('<%= server._id %>')" class="text-indigo-600 hover:text-indigo-900 mr-3">
                      <i class="fas fa-edit"></i> Edit
                    </button>
                    <button onclick="deleteServer('<%= server._id %>', '<%= server.name %>')" class="text-red-600 hover:text-red-900">
                      <i class="fas fa-trash"></i> Delete
                    </button>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="4" class="px-6 py-4 text-center text-gray-500">
                  No servers found. <a href="/add-server" class="text-blue-600 hover:text-blue-800">Add your first server</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- Edit Service Modal -->
<div id="editServiceModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Edit Service</h3>
      <form id="editServiceForm">
        <input type="hidden" id="editServiceId">
        <div class="mb-4">
          <label for="editServiceName" class="block text-sm font-medium text-gray-700 mb-2">Service Name</label>
          <input type="text" id="editServiceName" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        <div class="flex justify-end space-x-3">
          <button type="button" onclick="closeEditServiceModal()" class="px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">Cancel</button>
          <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/script') %>

<script>
// Edit Service Functions
function editService(id, name) {
  document.getElementById('editServiceId').value = id;
  document.getElementById('editServiceName').value = name;
  document.getElementById('editServiceModal').classList.remove('hidden');
}

function closeEditServiceModal() {
  document.getElementById('editServiceModal').classList.add('hidden');
}

document.getElementById('editServiceForm').addEventListener('submit', async function(e) {
  e.preventDefault();
  
  const id = document.getElementById('editServiceId').value;
  const name = document.getElementById('editServiceName').value;
  
  try {
    const response = await fetch(`/api/services/${id}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ name: name.toUpperCase() })
    });
    
    if (response.ok) {
      location.reload();
    } else {
      alert('Error updating service');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Error updating service');
  }
});

// Delete Service Function
function deleteService(id, name) {
  if (confirm(`Are you sure you want to delete the service "${name}"?`)) {
    fetch(`/api/services/${id}`, {
      method: 'DELETE'
    })
    .then(response => {
      if (response.ok) {
        location.reload();
      } else {
        alert('Error deleting service');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error deleting service');
    });
  }
}

// Edit Server Function
function editServer(id) {
  window.location.href = `/edit-server/${id}`;
}

// Delete Server Function
function deleteServer(id, name) {
  if (confirm(`Are you sure you want to delete the server "${name}"?`)) {
    fetch(`/api/servers/${id}`, {
      method: 'DELETE'
    })
    .then(response => {
      if (response.ok) {
        location.reload();
      } else {
        alert('Error deleting server');
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error deleting server');
    });
  }
}

// Close modal when clicking outside
document.getElementById('editServiceModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeEditServiceModal();
  }
});
</script>
